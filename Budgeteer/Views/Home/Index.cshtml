@model Budgeteer.Models.HomepageViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="content">
    <div id="dateDiv">
        <div id="dateFrequencyDiv">
            <label id="lblDateFrequency">Monthly</label>
        </div>
        <div id="monthDiv">
            <label id="lblMonth">June</label>
        </div>
        <div id="yearDiv">
            <label id="lblYear">2015</label>
        </div>
    </div>
    <div id="totalDiv">
        <div id="savingsDiv">
            <label id="savingsValue">$0</label><label id="savingsLabel"> savings</label>
        </div>
        <div id="totalIncomeDiv">
            <label id="totalIncomeValue">$0</label><label id="totalIncomeLabel"> income</label>
        </div>
        <div id="totalExpenseDiv">
            <label id="totalExpenseValue">$0</label><label id="totalExpenseLabel"> expense</label>
        </div>
    </div>
    @RenderPage("~/Views/Shared/_Income.cshtml", new { Entries = Model ?? null })
    @RenderPage("~/Views/Shared/_Expense.cshtml", new { Entries = Model ?? null })
</div>
